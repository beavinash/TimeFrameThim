<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= theme.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/themes/<%= theme._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="theme[name]" value="<%= theme.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="theme[image]" value="<%= theme.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="theme[timeFrame]" value="<%= theme.timeFrame %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="theme[description]" value="<%= theme.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/themes">Go Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>

