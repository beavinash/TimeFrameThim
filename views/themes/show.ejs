<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Eine</p>
            <div class="list-group">
                <li class="list-group-item active">Example 1</li>
                <li class="list-group-item">Example 2</li>      
                <li class="list-group-item">Example 3</li>                
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= theme.image %>">
                <div class="caption-full">
                    <h4 class="pull-right"><%= theme.timeFrame %></h4>
                    <h4><a><%=theme.name%></a></h4>
                    <hr></hr>
                    <p><%= theme.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/themes/<%= theme._id %>/comments/new">Add New Comment</a>
                </div>
                <hr></hr>
                <% theme.comments.forEach(function(comment){ %>
                <div class="row">
                    <div class="col-md-12">
                        <strong><%= comment.author %></strong>
                        <span class="pull-right">30 mins ago</span>
                    <p>
                         <%= comment.text %>
                    </p>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<h1></h1>

<% include ../partials/footer %>